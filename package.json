  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/bun": "1.2.8",
    "@types/express": "^5.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "express": "^5.0.1",
    "nanoid": "^5.1.5",
    "portfinder": "^1.0.35",
    "pptxgenjs": "^3.12.0",
    "zod": "^3.24.2"
  }
}